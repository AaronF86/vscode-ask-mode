{
    "comments": {
      "lineComment": "--"
    },
    "brackets": [
      ["(", ")"]
    ],
    "autoClosingPairs": [
      { "open": "(", "close": ")" }
    ],
    "autoCloseBefore": ";:.,=}])>` \n\t",
    "surroundingPairs": [
      ["(", ")"]
    ],
    "folding": {
      "markers": {
        "start": "^\\s*//\\s*#?region\\b",
        "end": "^\\s*//\\s*#?endregion\\b"
      }
    },
    "indentationRules": {
      "increaseIndentPattern": "^((?!\\/\\/).)*(\\{[^}\"'`]*|\\([^)\"'`]*|\\[[^\\]\"'`]*)$",
      "decreaseIndentPattern": "^((?!.*?\\/\\*).*\\*/)?\\s*[\\)\\}\\]].*$"
    },
    
    "onEnterRules": [
      {
        "beforeText": "^\\s*(?:Route|define|under).*?:\\s*$",
        "afterText": "^\\s*(?:where|test).*?:\\s*$",
        "action": { "indent": "indent" }
      }
    ]
    
  }